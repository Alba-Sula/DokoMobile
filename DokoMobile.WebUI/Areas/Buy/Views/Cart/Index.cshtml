@model DokoMobile.WebUI.ViewModels.CartViewModel

@{
    ViewBag.Title = "Cart Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #cartTable td {
        vertical-align: middle;
    }
</style>
<h2 style="margin-left: 300px;">Your cart</h2>
<table id="cartTable" class="table-condensed " style="width:50% ; margin-left: 300px;">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-center">@line.Quantity</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Product.Price).ToString("c"))
                </td>
                <td>
                    <div style="margin-left:15px;">
                        @using (Html.BeginForm("RemoveFromCart", "Cart", new { area = "Buy" }))
                        {
                            @Html.Hidden("productId", line.Product.ProductId)
                            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                            <input class="btn btn-sm btn-warning"
                                   type="submit" value="Remove" />
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.Cart.TotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue shopping</a>
</div>


